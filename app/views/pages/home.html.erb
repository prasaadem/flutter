<div class= "row">
    <div class= "col-xs-3">
        <div class="panel panel-default">
            <div class="panel-image hide-panel-body">
              <img src="/bg.jpg" class="panel-image-preview">
              </div>
            <div class="panel-footer text-center">
              <div class="row">
                <div class= "col-xs-2"><img src="user.png" style="height:50px; width:50px;" class="rounded-img home-avatar"></div>
                <div class= "col-xs-10"><h4 style="text-align:center;"><%= current_user.username %></h4></div>
                <div class= "col-xs-12" style="margin-top:0px">
                  <div class= "col-xs-6" style="font-size:80%; margin-top:0px;">TWEETS<br>
                  <h6 style="font-size:200%; color:#0084b4;">16</h6>
                  </div>
                  <div class= "col-xs-6" style="font-size:80%; margin-top:0px;">FOLLOWERS<br>
                  <h6 style="font-size:200%; color:#0084b4;">15</h6>
                  </div>
                </div>
              </div>
            </div>
        </div>
        
        <div class="panel panel-default">
              <div class="panel-body">
                <h5 style="color:grey; font-size:125%;">Trends</h5>
                <a href="#">#Trend #1</a><br>
                <span style="color:grey;">31k Posts</span><br><br>
                <a href="#">#Trend #2</a><br>
                <span style="color:grey;">26k Posts</span><br><br>
                <a href="#">#Trend #3</a><br>
                <span style="color:grey;">22k Posts</span><br><br>
                <a href="#">#Trend #4</a><br>
                <span style="color:grey;">19k Posts</span><br><br>
                <a href="#">#Trend #5</a><br>
                <span style="color:grey;">7k Posts</span><br><br>
              </div>
        </div>
    </div>
    <div class= "col-xs-6">
      <%= render '/components/post_form'%><br><br>
        <% for @p in @posts %>
        <div class="panel panel-default post-panel">
              <div class="panel-body row">
                <div class="col-sm-1">
                  <img src='/user.png' height="50px" width-"50px">
                </div>
                <div class="col-sm-11">
                  <p class="post-title"><span class="post-owner"></span><%= User.find(@p.user_id).username%></span> -<span class= "post-creation"> <%= @p.created_at.to_formatted_s(:short) %></span></p>
                  <p class="post-content"><%= @p.content %></p>
                </div>
                <div class="col-sm-12">
                   <p class="post-links">
                     <span class="glyphicon glyphicon-comment g-links" aria-hidden="true"></span>
                     <span class="glyphicon glyphicon-retweet g-links" aria-hidden="true"></span>
                     <span class="glyphicon glyphicon-heart g-links" aria-hidden="true"></span>
                     <span class="glyphicon glyphicon-option-horizontal g-links" aria-hidden="true"></span>
                     <a href="">View Conversation</a>
                   </p>
                </div>
              </div>
        </div>
        <% end %>
                <div class="panel panel-default post-panel">
              <div class="panel-body row">
                <div class="col-sm-12">
                   <center>
                     <img src="/icon.png" height="25px" weight="25px"></img>
                     <a href="#top"><p class="opacity:.7; color: grey;">Back to Top <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span></p></a>
                     </center>
                </div>
              </div>
        </div>
    </div>
    <div class= "col-xs-3">
        <div class="panel panel-default">
              <div class="panel-body">
                <p style="opacity:0.5;">About   Help   Blog   Status   Jobs   Terms   Privacy   Cookies   Ads   info   Brand   Advertise   Business   Media   Developers   Directory <br>@ 2016 Flutter</p>
              </div>
        </div>
    </div>
</div>



